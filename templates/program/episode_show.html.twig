{% extends "base.html.twig" %}

{% block title %}saison numéro {{episode.season.number}}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/assets/css/variables.css">
    <link rel="stylesheet" href="/assets/css/program/episodeShow.css">
{% endblock %}

{% block body %}
    <div class="options">
        <button class="btn">
            <a href="{{ path("program_season_show", { programId: episode.season.program.id, seasonId: episode.season.id}) }}">Retour</a>
        </button>
        {% if app.user and is_granted("ROLE_ADMIN") %}
            <button class="btn"><a href="{{ path('episode_edit', { 'id': episode.id} ) }}">Modifier l'épisode</a></button>
            {{ include('episode/_delete_form.html.twig') }}
        {% endif %}
    </div>
    <div class="container">
        <div class="photoInfos">
            <div class="photo">
                <img src="{{episode.season.program.poster}}">
            </div>
            <div class="infos">
                <div class="titreSerie">
                    <h1>{{episode.season.program.title}}</h1>
                    {# <button class="btnCommentaire"><a href="{{path('comment_new')}}">Laisser un commentaire</a></button> #}
                </div>
                <div class="titreEpisode">
                    <p>{{episode.title}}</p><p>saison {{episode.season.number}} episode {{episode.number}}</p>
                </div>
                <div class="resume">
                    <p>{{episode.summary}}</p>
                </div>
            </div>
        </div>
    </div>
    {% if app.user %}  
        {{ include('comment/_form.html.twig') }}
    {% else %}
        <button class="btnConnexion"><a href="{{path('login')}}">Connectez vous pour laisser un commentaire et mettre une note</a></button>
    {% endif %}
    <div class="containerCommentaire">
        {% for comment in episode.comments %}
            <div class="commentaire">
                <div class="authorEtNote">
                    <p>Par {{ comment.author.prenom }} {{ comment.author.nom }}</p>
                    <p>{{ comment.rate }}/10</p>
                </div>
                <p>{{ comment.comment }}</p>
                {% if app.user and is_granted("ROLE_ADMIN") or app.user == comment.author %}
                    <div class="optionsCommentaire">
                        <button class="btn-Secondary"><a href="{{ path('comment_edit', { 'id': comment.id} ) }}">Modifier le commentaire</a></button>
                        {{ include('comment/_delete_form.html.twig') }}
                    </div>
                {% endif %}
            </div>
        {% endfor %}
    </div>
{% endblock %}
