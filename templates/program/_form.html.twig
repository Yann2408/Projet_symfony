{{ form_start(form) }}
<div class="container">
    <div class="formInfos">
        <div class="infos">
            <div class="label">
                {{ form_label(form.title) }}
            </div>
            <div>
                {{ form_widget(form.title, {'attr': {'class': 'inputNom'}}) }} 
            </div>
            <div class="form-error">
                {{ form_errors(form.title) }}
            </div>
            <div class="label">
                {{ form_label(form.summary) }}
            </div>
            <div>
                {{ form_widget(form.summary, {'attr': {'class': 'inputNom'}}) }} 
            </div>
            <div class="form-error">
                {{ form_errors(form.summary) }}
            </div>
            <div class="label">
                {{ form_label(form.anneeSortie) }}
            </div>
            <div>
                {{ form_widget(form.anneeSortie, {'attr': {'class': 'inputNom'}}) }} 
            </div>
            <div class="form-error">
                {{ form_errors(form.anneeSortie) }}
            </div>
            <div class="label">
                {{ form_label(form.poster) }}
            </div>
            <div>
                {{ form_widget(form.poster, {'attr': {'class': 'inputNom'}}) }} 
            </div>
            <div class="form-error">
                {{ form_errors(form.poster) }}
            </div>
            <div class="label">
                {{ form_label(form.category) }}
            </div>
            <div>
                {{ form_widget(form.category, {'attr': {'class': 'inputNom'}}) }} 
            </div>
            <div class="form-error">
                {{ form_errors(form.category) }}
            </div>
        </div>
    </div>
    <div class="formActeurs">
        <div class="label">
            {{ form_label(form.actors) }}
        </div>
        <div class="all-checkboxes">
            <p class="titreActeurs">Acteurs</p>
            {% for checkbox in form.actors.children %}
                <div class="checkbox">
                    {{ form_label(checkbox) }}
                    {{ form_widget(checkbox) }}
                </div>
            {% endfor %}
        </div>
        <div class="form-error">
            {{ form_errors(form.actors) }}
        </div>
    </div>
</div>
<div class="bouton">
    <button class="btn-Secondary">{{ button_label|default('Ajouter') }}</button>
</div>
{{ form_end(form) }}