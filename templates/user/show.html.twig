{% extends 'base.html.twig' %}

{% block title %}{{ user.prenom }} {{ user.nom }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/assets/css/variables.css">
    <link rel="stylesheet" href="/assets/css/compte/index.css">
{% endblock %}

{% block body %}
    <div class="options">
        <button class="btn"><a href="{{ path('user_index') }}">Retour à la liste des utilisateurs</a></button>
        <button class="btn"><a href="{{ path('user_edit', {'id': user.id}) }}">Modifier le compte</a></button>
        {{ include('user/_delete_form.html.twig') }}
    </div>
    <div class="profilContainer">
        <div class="titre">
            <p><span>{{ user.prenom }} {{ user.nom }}</span></p>
        </div>
        <div class="infos">
            <div class="row">
                <p> Prénom: {{ user.prenom}}</p>
                <p> Email: {{ user.email}}</p>                
            </div>
            <div class="row">
                <p> Nom: {{ user.nom}}</p>
                <p> Mot de passe: ***** </p>
            </div>
        </div>
    </div>
{% endblock %}