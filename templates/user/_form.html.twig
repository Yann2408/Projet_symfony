{{ form_start(form) }}
<div class="container">
    <div class="titreEtDroits">
        <h1>Modifier mon profil</h1>
        {% if app.user and is_granted("ROLE_ADMIN") %}
            <div class="droits">
                <div class="label">
                    {{ form_label(form.roles) }}
                </div>
                <div>
                    {{ form_widget(form.roles) }} 
                </div>
                <div class="form-error">
                    {{ form_errors(form.roles) }}
                </div>
            </div>
        {% else %}
            <div class="droits">
                <div>
                    {{ form_widget(form.roles, { 'attr' : { 'style':'display:none'} }) }}
                </div>
                <div class="form-error">
                    {{ form_errors(form.roles, { 'attr' : { 'style':'display:none'} }) }}
                </div>
            </div> 
        {% endif %}
    </div>
    <div class="row">
        <div class="info">
            <div class="label">
                {{ form_label(form.prenom) }}
            </div>
            <div>
                {{ form_widget(form.prenom) }} 
            </div>
            <div class="form-error">
                {{ form_errors(form.prenom) }}
            </div>
        </div>
        <div class="info">
            <div class="label">
                {{ form_label(form.nom) }}
            </div>
            <div>
                {{ form_widget(form.nom) }} 
            </div>
            <div class="form-error">
                {{ form_errors(form.nom) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="info">
            <div class="label">
                {{ form_label(form.email) }}
            </div>
            <div>
                {{ form_widget(form.email) }} 
            </div>
            <div class="form-error">
                {{ form_errors(form.email) }}
            </div>
        </div>
        <div class="info">
            <div class="label">
                {{ form_label(form.password) }}
            </div>
            <div>
                {{ form_widget(form.password) }} 
            </div>
            <div class="form-error">
                {{ form_errors(form.password) }}
            </div>
        </div>
    </div>
    <button class="btn-Secondary">{{ button_label|default('Save') }}</button>
</div>
{{ form_end(form) }}