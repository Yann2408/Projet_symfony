{% extends 'base.html.twig' %}

{% block title %}Les categories{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/assets/css/variables.css">
    <link rel="stylesheet" href="/assets/css/categorie/index.css">
{% endblock %}


{% block body %}
    <div class="buttons">
        <button class="btn"><a href="{{ path('accueil') }}">Retour à l'accueil</a></button>
        <button class="btn"><a href="{{ path('program_index') }}">Voir toutes les séries</a></button>
        {% if app.user and is_granted("ROLE_ADMIN") %}
            <button class="btn"><a href="{{ path('new_category') }}">Ajouter une catégorie</a></button>
        {% endif %}
    </div>
    <div class="container">
    <h1>Toutes les catégories </h1>
        <div class="categories">
        {% for category in categories %}
            <button class="btnCategorie"><a href="{{ path("category_show", { categoryName: category.Name }) }}">{{ category.name }}</a></button>
        {% else %}
            Aucune catégories trouvée.
        {% endfor %}
        </div>
    </div>
{% endblock %}